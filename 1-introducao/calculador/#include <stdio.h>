#include <stdio.h>
#include <stdbool.h>
#include <string.h>

void menu(int *opt){
    printf("===============================\n");
    printf("   Calculadora Simples   \n");
    printf("===============================\n");
    printf("Selecione uma operação:\n");
    printf("1. Adição\n2. Subtração\n3. Multiplicação\n4. Divisão\n5. Sair\nOpção: ");
    scanf("%d", opt);
}

void soma(){
    int a;
    int b;
    printf("Digite o primeiro numero: ");
    scanf("%d",&a);
    printf("Digite o segundo numero: ");
    scanf("%d", &b);
    printf("Resultado: %d + %d = %d\n",a,b,a+b);
}

void sub(){
    int a;
    int b;
    printf("Digite o primeiro numero: ");
    scanf("%d",&a);
    printf("Digite o segundo numero: ");
    scanf("%d", &b);
    printf("Resultado: %d + %d = %d\n",a,b,a-b);
}

void mult(){
    int a;
    int b;
    printf("Digite o primeiro numero: ");
    scanf("%d",&a);
    printf("Digite o segundo numero: ");
    scanf("%d", &b);
    printf("Resultado: %d + %d = %d\n",a,b,a*b);
}

void div(){
    int a;
    int b;
    printf("Digite o primeiro numero: ");
    scanf("%d",&a);
    printf("Digite o segundo numero: ");
    scanf("%d", &b);
    printf("Resultado: %d + %d = %d\n",a,b,a/b);
}

int main(){
    int opt;
    char opcao;

    menu(&opt);
    do{

    } while(opt != 5);
    while(opt == 1){
        soma();
        printf("blcoo 1Deseja realizar outra operação? (s/n): ");
        scanf(" %c", &opcao);
		if(opcao == 'n'){\
            printf("Obrigado por usar a calculadora! Até a próxima.");
			break;
		}
     }
    while(opt == 2){
        sub();
        printf("blcoo 1Deseja realizar outra operação? (s/n): ");
        scanf(" %c", &opcao);
		if(opcao == 'n'){
            printf("Obrigado por usar a calculadora! Até a próxima.");
			break;
		}
     }
     while(opt == 3){
        mult();
        printf("blcoo 1Deseja realizar outra operação? (s/n): ");
        scanf(" %c", &opcao);
		if(opcao == 'n'){
            printf("Obrigado por usar a calculadora! Até a próxima.");
			break;
		}
     }
     while(opt == 4){
        div();
        printf("blcoo 1Deseja realizar outra operação? (s/n): ");
        scanf(" %c", &opcao);
		if(opcao == 'n'){
            printf("Obrigado por usar a calculadora! Até a próxima.");
			break;
		}
     }
	 if(opt == 5){
        printf("Obrigador por usar a calculado! Saindo...");
        return 1;
     } else if(opt > 5 || opt < 1){
        printf("A opcao digitada foi inválida.");
        printf("esreva novamente: ");
        scanf(" %c", &opcao);

     }
     
		return 0;
}
